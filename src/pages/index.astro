---
import Layout from "../layouts/Layout.astro";
import Sponsors from "../components/Sponsors2025.astro";
import Card from "../components/Card.astro";
import Agenda from "../components/Agenda2025.astro";
import CallForPapers from "../components/CallForPapers.astro";
import Speakers from "../components/Speakers2025.astro";
import Hosts from "../components/Hosts2025.astro";
import Support from "../components/Support2025.astro";
import Location from "../components/Location.astro";
import Tickets from "../components/Tickets.astro";
import Partners from "../components/Partners.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Do iOS Developer Conference 2025 Amsterdam">
  <main>
    <section class="hero">
      <div class="hero-content">
        <h1>Do iOS <span class="text-gradient">2025</span></h1>
        <h2>iOS Developer Conference</h2>
              <p>
                Join us for the 2025 edition of one of Europe's premier iOS developer
                conferences. Three days of workshops, talks, and networking in the heart of
                Amsterdam.
      </p>

        <p class="hero-dates">
          <strong>Workshops:</strong> November 11<br />
          <strong>Conference:</strong> November 12-13
        </p>
         <!-- <a href="#tickets" class="cta-button">Get Your Tickets Now</a> -->
         <p class="hero-sponsors">
        We are also looking for sponsors of the 2025 edition of Do iOS. Please
        reach out, contact info at bottom of this page.
      </p>

      </div>
    </section>

    <section class="newsletter">
      <h2>Do iOS will be back in 2025 on Nov. 11, 12 and 13.</h2>
      <h3>Stay Updated</h3>
      <form
        action="https://sendy.appforce1.net/subscribe"
        method="POST"
        accept-charset="utf-8"
        class="newsletter-form"
      >
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Your email address"
          required
        />
        <button type="submit" class="submit-button">Subscribe</button>
        <input type="hidden" name="list" value="AdW3A892ID2J58BxyArjRhFw" />
        <input type="hidden" name="subform" value="yes" />
      </form>
    </section>

    <section class="highlights">
      <h2>Conference Highlights</h2>
      <section>
        <p>
          Do iOS is back in 2024. After 6 successful editions in <a href="/2015"
            >2015</a
          >, <a href="/2016">2016</a>, <a href="/2018">2018</a>, <a href="/2022">2022</a>, <a href="/2023"
        >2023</a>, and <a href="/2024">2024</a> we again invite you to join us in Amsterdam
          to celebrate iOS development in all its aspects.
        </p>
      </section>

      <div class="highlights-grid">
        <Card
          title="Workshop: TBA"
          body="November 11"
          description="More info coming soon."
        />
        <Card
          title="Workshop: TBA"
          body="November 11"
          description="More info coming soon."

        />
        <Card
          title="Two Days of Inspiring Talks"
          body="November 12-13"
          description="Connect with peers, share knowledge, and celebrate iOS development in the heart of Amsterdam."
        />
      </div>
    </section>

    <section class="tickets">
      <Tickets />
    </section>

    <section class="location">
      <Location />
    </section>

    <section class="agenda">
      <Agenda />
    </section>

    <section class="speakers">
      <Speakers />
    </section>

    <section class="hosts">
      <Hosts />
    </section>

    <section class="support">
      <Support />
    </section>

    <section class="sponsors">
      <Sponsors />
    </section>

    <!-- <section class="cfp">
      <h2>Call for Papers</h2>
      <CallForPapers />
    </section> -->
  </main>
  <footer>
    <Partners />
    <Footer />
  </footer>
</Layout> 

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero {
    background: linear-gradient(135deg, #0a2463, var(--my-blue));
    color: white;
    padding: 4rem 2rem;
    border-radius: 1rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  h2 {
    font-size: 2rem;
    font-weight: 300;
    margin-bottom: 1rem;
  }

  .text-gradient {
    background: linear-gradient(45deg, #ff6b6b, #feca57, #48dbfb);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-dates {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
  .hero-next-year {
    font-size: 2.0rem;
    margin-bottom: 0rem;
  }
  .hero-sponsors {
    font-size: 1.2rem;
    margin-bottom: 0rem;
  }

  .cta-button {
    display: inline-block;
    background: #ff6b6b;
    color: white;
    padding: 1rem 2rem;
    border-radius: 2rem;
    font-size: 1.2rem;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-bottom: 1rem;

  }

  .cta-button:hover {
    background: #ff4757;
    transform: translateY(-3px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .newsletter {
    background: #f1f2f6;
    padding: 3rem 2rem;
    border-radius: 1rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .newsletter h2 {
    margin-bottom: 1rem;
  }

  .newsletter-form {
    display: flex;
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter-form input[type="email"] {
    flex-grow: 1;
    padding: 0.75rem 1rem;
    border: none;
    border-radius: 2rem 0 0 2rem;
    font-size: 1rem;
  }

  .submit-button {
    background: var(--my-blue);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0 2rem 2rem 0;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .submit-button:hover {
    background: #2980b9;
  }

  .highlights {
    margin-bottom: 2rem;
  }

  .highlights h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1rem;
    }

    h1 {
      font-size: 3rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-form input[type="email"],
    .submit-button {
      width: 100%;
      border-radius: 2rem;
      margin-bottom: 1rem;
    }
  }
</style>
