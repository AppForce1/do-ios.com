---
import data from "../data/data-2024.json";
import XButton from "./XButton.astro";
---

<section id="speakers">
  <h2>Conference Speakers</h2>
  <div class="speaker-grid">
    {
      data.speakers.map((speaker) => (
        <div class="speaker-element">
          <img src={speaker.image} alt={speaker.name} />
          <h3>{speaker.name}</h3>
          {speaker.xHandle && <XButton handle={speaker.xHandle} />}
        </div>
      ))
    }
  </div>
</section>

<style>
  h2 {
    font-size: 36px;
    line-height: 48px;
    letter-spacing: -1px;
    font-weight: 800;
    margin: 0;
  }

  .speaker-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .speaker-element {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .speaker-element h3 {
    font-size: 18px;
    line-height: 24px;
    letter-spacing: -1px;
    font-weight: 800;
    margin: 0;
    background: var(--my-yellow);
    padding: 0.5rem 1rem;
    margin-top: -1rem;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
  }

  .speaker-element img {
    border-radius: 50%;
    max-width: 100%;
    aspect-ratio: 1;
    border: 4px solid var(--my-yellow);
  }

  @media only screen and (max-width: 600px) {
    .speaker-grid {
      padding: 1rem;
    }
  }
</style>
