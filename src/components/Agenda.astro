---
import data from '../data/data.json';
---

<section id='agenda'>
  <h2>Agenda</h2>
  <ul class='day-list'>
    {
      data.days.map((day) => (
        <li>
          <h3>{day.date}</h3>
          <ul class='talk-list'>
            {day.talks.map((talk) => (
              <li class='talk-card'>
                <p class='talk-time'>{talk.time}</p>
                <div class='talk-element'>
                  <div>
                    <span class='badge'>Workshop</span>
                    <h4>{talk.title}</h4>
                    <p>{talk.description}</p>
                  </div>
                  <div class='speaker-row'>
                    {talk.speakers.map((speaker) => (
                      <div class='speaker-element'>
                        <img src={speaker.image} alt='{speaker.name}' />
                        <p>{speaker.name}</p>
                      </div>
                    ))}
                  </div>
                </div>
              </li>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    margin-top: 4rem;
  }

  h2 {
    font-size: 36px;
    line-height: 48px;
    letter-spacing: -1px;
    font-weight: 800;
    margin: 0;
  }

  h3 {
    font-size: 28px;
    line-height: 40px;
    letter-spacing: -1px;
    border-left: 8px solid var(--my-blue);
    padding-left: 1rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    border-radius: 8px;
    background: var(--my-blue-background);
  }

  ul {
    padding-inline-start: 0rem;
  }

  li {
    list-style: none;
  }

  .talk-card {
    border: 4px solid var(--border-color);
    border-radius: 1rem;
    padding: 1rem 1rem;
    display: flex;
  }

  .talk-card:not(:last-child) {
    margin-bottom: 1rem;
  }

  .talk-time {
    font-size: 46px;
    font-family: monospace;
    line-height: 54px;
    letter-spacing: -0.5px;
    font-weight: 400;
    padding: 1rem 0;
    padding-right: 1rem;
    margin: auto 0;
    border-right: 2px solid var(--border-color);
  }

  .talk-element h4 {
    font-size: 18px;
    line-height: 28px;
    font-weight: bold;
    margin-top: 1rem;
    margin-bottom: 0.25rem;
  }

  .talk-element p {
    font-size: 18px;
    line-height: 28px;
    margin: 0;
    line-break: anywhere;
    max-height: 6rem;
    overflow-y: scroll;
  }

  .speaker-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    align-items: center;
    /* justify-content: center; */
    width: 100%;
    margin-top: 1rem;
  }

  .speaker-element {
    display: flex;
    align-items: center;
  }

  .speaker-element img {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    z-index: 5;
    border: 4px solid var(--my-green);
  }

  .speaker-element p {
    font-size: 20px;
    line-height: 26px;
    letter-spacing: -0.5px;
    font-weight: bold;
    padding: 0.5rem 1rem;
    margin: 0;
    background: var(--my-green);
    color: white;
    border-radius: 0.5rem;
    margin-left: -1rem;
  }

  .leading-element h4 {
    font-size: 24px;
    font-family: monospace;
    margin: 0;
    color: white;
    background: var(--my-green);
    padding: 0.25rem 1rem;
    border-radius: 0.5rem;
    margin-top: -1rem;
    z-index: 10;
  }

  .talk-element {
    padding: 1rem;
  }

  .badge {
    background: violet;
    font-size: 14px;
    /* font-weight: bold; */
    padding: 0.25rem 0.75rem;
    border-radius: 1.5rem;
  }
</style>
