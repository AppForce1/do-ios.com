---
import { getCollection } from 'astro:content';

const allAgendaItems = await getCollection('agenda');
let workshops = [];
let day1Talks = [];
let day2Talks = [];
for (const item of allAgendaItems) {
  const rendered = await item.render();

  const talk = {
    content: rendered.Content,
    type: item.data.type,
    title: item.data.title,
    name: item.data.name,
    time: item.data.time,
    image: item.data.image,
    summary: item.data.summary,
  };
  switch(item.data.date) {
    case '2023-11-07':
      workshops.push(talk);
      break;
    case '2023-11-08':
      day1Talks.push(talk);
      break;
    case '2023-11-09':
      day2Talks.push(talk);
      break;
  }
}

workshops = workshops.sort((a, b) => a.time.localeCompare(b.time));
day1Talks = day1Talks.sort((a, b) => a.time.localeCompare(b.time));
day2Talks = day2Talks.sort((a, b) => a.time.localeCompare(b.time));
---

<section id='agenda'>
  <h2>Agenda</h2>
  <ul class='day-list'>
    <li>
      <h3>2023-11-07 - Workshop</h3>
      <ul class='talk-list'>
    { workshops.map(talk => (
        <li class='talk-card'>
          <span class='badge'>{talk.time}</span><span class='badge'>{talk.type}</span>
          <div>
            <h4>{talk.title}</h4>
            <details>
              <summary>{talk.summary}</summary>
              <talk.content>
            </details>
          </div>
          <div class='speaker-row'>
              <div class='speaker-element'>
                <img src={talk.image} alt='{speaker.name}' />
                <p>{talk.name}</p>
              </div>
          </div>
        </li>
      ))}
    </ul>
    </li>
    <li>
      <h3>2023-11-09 - Conference Day 1</h3>
      <ul class='talk-list'>
    { day1Talks.map(talk => (
        <li class='talk-card'>
          <span class='badge'>{talk.time}</span><span class='badge'>{talk.type}</span>
          <div>
            <h4>{talk.title}</h4>
            <talk.content>
          </div>
          <div class='speaker-row'>
              <div class='speaker-element'>
                <img src={talk.image} alt='{speaker.name}' />
                <p>{talk.name}</p>
              </div>
          </div>
        </li>
      ))}
    </ul>
    </li>
    <li>
      <h3>2023-11-09 - Conference Day 2</h3>
      <ul class='talk-list'>
    { day2Talks.map(talk => (
        <li class='talk-card'>
          <span class='badge'>{talk.time}</span><span class='badge'>{talk.type}</span>
          <div>
            <h4>{talk.title}</h4>
            <talk.content>
          </div>
          <div class='speaker-row'>
              <div class='speaker-element'>
                <img src={talk.image} alt='{speaker.name}' />
                <p>{talk.name}</p>
              </div>
          </div>
        </li>
      ))}
    </ul>
    </li>
  </ul>
</section>

<style>
  section {
    margin-top: 4rem;
  }

  h2 {
    font-size: 36px;
    line-height: 48px;
    letter-spacing: -1px;
    font-weight: 800;
    margin: 0;
  }

  h3 {
    font-size: 28px;
    line-height: 40px;
    letter-spacing: -1px;
    border-left: 8px solid var(--my-blue);
    padding-left: 1rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    border-radius: 8px;
    background: var(--my-blue-background);
  }

  h4 {
    font-size: 24px;
    line-height: 32px;
    font-weight: bold;
    margin-top: 1rem;
    margin-bottom: 0.25rem;
  }

  p {
    font-size: 18px;
    line-height: 28px;
    margin: 0;
  }

  ul {
    padding-inline-start: 0rem;
  }

  li {
    list-style: none;
  }

  .talk-card {
    border: 4px solid var(--border-color);
    border-radius: 1rem;
    padding: 2rem 2rem;
    margin-bottom: 1rem;

  }

  .speaker-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    align-items: center;
    margin-top: 1rem;
    width: 100%;
  }

  .speaker-element {
    display: flex;
    align-items: center;
  }

  .speaker-element img {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    z-index: 5;
    border: 4px solid var(--my-green);
  }

  .speaker-element p {
    font-size: 20px;
    line-height: 26px;
    letter-spacing: -0.5px;
    font-weight: bold;
    padding: 0.5rem 1rem;
    margin: 0;
    background: var(--my-green);
    color: white;
    border-radius: 0.5rem;
    margin-left: -1rem;
  }

  .badge {
    background: violet;
    font-size: 16px;
    font-weight: bold;
    font-family: monospace;
    padding: 0.25rem 0.75rem;
    border-radius: 1.5rem;
  }

  @media only screen and (max-width: 600px) {
    .talk-card {
      padding: 1rem;
      margin-bottom: 1rem;
    }

    .speaker-element:not(:last-child) {
      margin-bottom: 1rem;
    }

    .speaker-element img {
      width: 2.5rem;
      height: 2.5rem;
    }

    .speaker-element p {
      font-size: 14px;
    }
  }
</style>
