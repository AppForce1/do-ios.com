---
import revenuecat from "../data/images/sponsors/revenuecat.svg";
import abnamro from "../data/images/sponsors/ABN-AMRO.png";
import stream from "../data/images/sponsors/stream-logo.svg";
import ing from "../data/images/sponsors/ING.png";
import rocketsim from "../data/images/sponsors/RocketSim.png";
import appcircle from "../data/images/sponsors/appcircle.svg";
---

<section id="sponsors">
  <h2>Sponsors of 2023</h2>
  <div class="sponsors-grid-gold">
    <a href="https://www.revenuecat.com/" class="revenue-cat">
      <img src={revenuecat.src} alt="RevenueCat logo" />
    </a>
    <a
      href="https://www.werkenbijabnamro.nl/en/vacancies/department/it"
      class="abn-amro"
    >
      <img src={abnamro.src} alt="ABN AMRO logo" />
    </a>
    <a
      href="https://getstream.io/chat/sdk/swiftui/?utm_source=doiOS&utm_medium=sponsorship&utm_content=&utm_campaign=doiOS_November2023_event_klmh22"
      class="stream"
    >
      <img src={stream.src} alt="Stream logo" />
    </a>
    <a href="https://www.ing.jobs/netherlands/vacancies.htm" class="ing">
      <img src={ing.src} alt="ING logo" />
    </a>
    <a
      href="https://appcircle.io/benefits?utm_source=sponsoring&utm_medium=conference&utm_campaign=do_ios_2023"
      class="appcircle"
    >
      <img src={appcircle.src} alt="AppCircle logo" />
    </a>

    <a
      href="https://www.rocketsim.app?utm_source=sponsoring&utm_medium=conference&utm_campaign=do_ios_2023"
      class="rocketsim"
    >
      <img src={rocketsim.src} alt="RocketSim logo" />
    </a>
  </div>
</section>

<style>
  h2 {
    font-size: 36px;
    line-height: 48px;
    letter-spacing: -1px;
    font-weight: 800;
  }

  .sponsors-grid-gold {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-gap: 4rem;
  }
  .sponsors-grid-gold img {
    max-width: 100%;
    /* height: 100%; */
  }

  .sponsors-grid-gold a {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 6rem;
  }

  .sponsors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-gap: 6rem;
    margin: 2rem 0;
  }
  .sponsors-grid img {
    max-width: 25%;
    /* height: 100%; */
  }

  .sponsors-grid a {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 6rem;
  }

  .rocketsim {
    height: 150px;
  }

  @media only screen and (max-width: 600px) {
    .sponsors-grid {
      padding: 1rem;
    }
    .sponsors-grid img {
      max-width: 50%;
      /* height: 100%; */
    }
  }
</style>
