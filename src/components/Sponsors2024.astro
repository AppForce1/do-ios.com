---
import abnamro from "../data/images/sponsors/ABN-AMRO.png";
import stream from "../data/images/sponsors/stream-logo.svg";
import rocketsim from "../data/images/sponsors/RocketSim.png";
import screenshotbot from "../data/images/sponsors/screenshotbot.svg";
import flitsmeister from "../data/images/sponsors/flitsmeister.png"; // Added import for Flitsmeister logo
---

<section id="sponsors">
  <h2>Conference Sponsors</h2>
  <div class="sponsors-grid-gold">
    <a
      href="https://www.werkenbijabnamro.nl/en/vacancies/department/it"
      class="abn-amro"
    >
      <img src={abnamro.src} alt="ABN AMRO logo" />
    </a>
    <a
      href="https://getstream.io/chat/sdk/swiftui/?utm_source=doiOS&utm_medium=sponsorship&utm_content=&utm_campaign=doiOS_November2024_event_klmh22"
      class="stream"
    >
      <img src={stream.src} alt="Stream logo" />
    </a>
    <a
      href="https://screenshotbot.io/?utm_source=doios"
      class="screenshotbot"
    >
      <img src={screenshotbot.src} alt="ScreenshotBot logo" class="screenshotbot"/>
    </a>
    <a
      href="https://www.rocketsim.app?utm_source=sponsoring&utm_medium=conference&utm_campaign=do_ios_2024"
      class="rocketsim"
    >
      <img src={rocketsim.src} alt="RocketSim logo" />
    </a>
    <a
      href="https://flitsmeister.homerun.co/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <img src={flitsmeister.src} alt="Flitsmeister logo" />
    </a>
  </div>
</section>

<style>
  h2 {
    font-size: 36px;
    line-height: 48px;
    letter-spacing: -1px;
    font-weight: 800;
  }

  .sponsors-grid-gold {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-gap: 4rem;
  }
  .sponsors-grid-gold img {
    max-width: 100%;
    /* height: 100%; */
  }

  .sponsors-grid-gold a {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 6rem;
  }

  .sponsors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-gap: 6rem;
    margin: 2rem 0;
  }
  .sponsors-grid img {
    max-width: 25%;
    /* height: 100%; */
  }

  .sponsors-grid a {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 6rem;
  }

  .rocketsim {
    height: 150px;
  }

  .screenshotbot {
    height: 150px;
  }
  @media only screen and (max-width: 600px) {
    .sponsors-grid {
      padding: 1rem;
    }
    .sponsors-grid img {
      max-width: 50%;
      /* height: 100%; */
    }
  }
</style>
